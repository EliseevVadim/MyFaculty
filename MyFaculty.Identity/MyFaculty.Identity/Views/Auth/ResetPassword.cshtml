@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Восстановление пароля";
}

<div class="background-area">
    <div class="container">
        <div class="row card hoverable">
            <div class="card-content ">
                <h4 class="center blue-text form-title">Восстановление пароля</h4>
                <h6 class="center red-text">@Model.ErrorMessage</h6>
                <form asp-controller="Auth" asp-action="ResetPassword" method="post" class="row s12">
                    <div asp-validation-summary="All" class="center red-text"></div>
                    <input type="hidden" asp-for="Code"/>
                        <div class="col s12">
                            <div class="input-field">
                                <label>Email</label>
                                <input type="email" asp-for="Email" placeholder="Введите ваш email*" required>
                                <span class="red-text" asp-validation-for="Email"></span>
                            </div>
                        </div>
                    <div class="col s12">
                        <div class="input-field">
                            <label>Пароль</label>
                            <input type="password" asp-for="Password" placeholder="Введите новый пароль*" required>
                            <span class="red-text" asp-validation-for="Password"></span>
                        </div>
                     </div>
                    <div class="col s12">
                        <div class="input-field">
                            <label>Подтверждение пароля</label>
                            <input type="password" asp-for="ConfirmedPassword" placeholder="Повторите новый пароль*" required>
                            <span class="red-text" asp-validation-for="ConfirmedPassword"></span>
                        </div>
                     </div>
                    <div class="col s12 center">
                        <button type="submit" class="btn btn-large waves-effect waves-light green">
                            Восстановить пароль
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>